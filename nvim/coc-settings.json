{
  "suggest.noselect": false,
  "diagnostic.errorSign": "üí•",
  "diagnostic.warningSign": "‚ùì",
  "diagnostic.infoSign": "üí°",
  "diagnostic.checkCurrentLine": true,
  "sql.lintOnOpen": false,
  "sql.lintOnChange": false,
  "sql.lintOnSave": false,
  "sql.database": "postgresql",
  "coc.preferences.formatOnSaveFiletypes": [
    "javascript",
    "typescript",
    "typescriptreact",
    "json",
    "html",
    "css",
    "scss",
    "javascriptreact",
    "typescript.tsx",
    "graphql",
    "go",
    "ruby"
  ],
  "javascript.suggestionActions.enabled": false,
  "languageserver": {
    "terraform": {
        "command": "terraform-lsp",
        "filetypes": [
            "terraform",
            "tf"
        ],
        "initializationOptions": {},
        "settings": {}
    },
    "golang": {
      "command": "gopls",
      "rootPatterns": [".root", "go.mod"],
      "filetypes": ["go"]
    },
    "golangci-lint-languageserver": {
      "command": "golangci-lint-langserver",
      "filetypes": ["go"],
      "initializationOptions": {
        "command": ["golangci-lint", "run", "-D", "errcheck", "-E", "revive", "--exclude", "var-naming", "--out-format", "json"]
      }
    }
  },
  "go.goplsOptions": {
    "staticcheck": true
  },
  "tsserver.watchOptions": {
    "watchFile": "useFsEvents"
  },
  "list.source.symbols.excludes": ["**/node_modules/**", "**/node_modules/**/.*", "**/node_modules/**/.*/**"],
  "solargraph.formatting": true,
  "solargraph.autoformat": true
}
